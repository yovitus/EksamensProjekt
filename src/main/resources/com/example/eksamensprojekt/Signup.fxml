<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eksamensprojekt.SignupController">
   <children>
      <Label layoutX="11.0" layoutY="21.0" text="Sign up to Stream++ here">
         <font>
            <Font name="Arial" size="35.0" />
         </font>
      </Label>
      <Label layoutX="118.0" layoutY="128.0" text="Username:">
         <font>
            <Font name="Arial" size="13.0" />
         </font></Label>
      <TextField fx:id="Username" layoutX="120.0" layoutY="157.0" promptText="Enter Username">
         <font>
            <Font name="Arial" size="13.0" />
         </font></TextField>
      <TextField fx:id="Password" layoutX="120.0" layoutY="219.0" promptText="Enter Password">
         <font>
            <Font name="Arial" size="13.0" />
         </font></TextField>
      <Label layoutX="120.0" layoutY="200.0" text="Password:">
         <font>
            <Font name="Arial" size="13.0" />
         </font></Label>
      <Button id="SignUpButton" layoutX="163.0" layoutY="258.0" mnemonicParsing="false" onAction="#CreateUser" prefHeight="40.0" prefWidth="70.0" text="Sign up">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Arial" size="13.0" />
         </font></Button>
      <Label fx:id="signUpFailMessage" alignment="CENTER" layoutX="-1.0" layoutY="310.0" prefHeight="17.0" prefWidth="400.0" textAlignment="CENTER" textFill="RED">
         <font>
            <Font name="Arial" size="13.0" />
         </font></Label>
      <Button layoutX="163.0" layoutY="336.0" mnemonicParsing="false" onAction="#goToMain" prefHeight="20.0" prefWidth="70.0" text="Go back">
         <font>
            <Font name="Arial" size="13.0" />
         </font></Button>
   </children>
</AnchorPane>
